{
  "name": "hypercord",
  "private": true,
  "packageManager": "pnpm@10.17.1+sha512.17c560fca4867ae9473a3899ad84a88334914f379be46d455cbf92e5cf4b39d34985d452d2583baf19967fa76cb5c17bc9e245529d0b98745721aa7200ecaf7a",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm -F @hypercord/bot run build",
    "dev": "pnpm -F @hypercord/bot run dev",
    "lint": "pnpm -F @hypercord/bot run lint",
    "test": "pnpm -F @hypercord/bot run test",
    "format": "pnpm -F @hypercord/bot run format",
    "format:write": "pnpm -F @hypercord/bot run format:write",
    "bot:db": "pnpm -F @hypercord/bot run db:dev",
    "bot:register": "pnpm -F @hypercord/bot run register",
    "bot:dev": "pnpm -F @hypercord/bot run dev",
    "bot:build": "pnpm -F @hypercord/bot run build",
    "bot:up": "docker compose -f apps/bot/docker-compose.yaml up -d",
    "bot:down": "docker compose -f apps/bot/docker-compose.yaml down",
    "bot:dev:hot": "pnpm -F @hypercord/bot run dev:hot",
    "bot:up-all": "pnpm run bot:up && pnpm run bot:db && pnpm run bot:dev:hot"
  }
}
